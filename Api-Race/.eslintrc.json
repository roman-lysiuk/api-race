{
  "plugins": ["prettier", "import", "@typescript-eslint", "sonarjs"],
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier", "airbnb-base/legacy", "airbnb-typescript/base", "plugin:sonarjs/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "prefer-const": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "prettier/prettier": "error",
    "sonarjs/prefer-immediate-return": "off"
  }
}
